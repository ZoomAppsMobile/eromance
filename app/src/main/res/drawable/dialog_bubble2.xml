<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/golden" />
            </shape>
        </rotate>
    </item>
    <item android:right="16dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/golden" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:right="18dp" android:top="2dp"
        android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle" >
            <padding android:right="20dp" android:top="4dp"
                android:left="4dp" android:bottom="4dp"/>
            <solid android:color="#fff" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>