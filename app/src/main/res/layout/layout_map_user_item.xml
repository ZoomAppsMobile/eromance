<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/main_container"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="20"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/avatar_container_RL"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_avatar_CIV"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/golden"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/noavatar2"/>
                <ImageView
                    android:id="@+id/user_net_status"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignTop="@id/user_avatar_CIV"
                    android:layout_alignRight="@id/user_avatar_CIV"
                    android:src="@drawable/icon_status_online"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_realname_TV"
                android:textColor="@color/golden"
                android:textSize="15sp"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/point_created_time_TV"
                android:textColor="#2d2d2d"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/hour_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>