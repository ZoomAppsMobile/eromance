<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="3dp">
    <android.support.v7.widget.CardView
        android:id="@+id/main_container_CV"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/main_element_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/elem_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_user_avatar_CIV"
                android:layout_width="50dp"
                android:src="@drawable/noavatar2"
                android:layout_height="50dp" />
            <TextView
                android:layout_toRightOf="@id/item_user_avatar_CIV"
                android:id="@+id/item_username_TV"
                android:text="test"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/review_date_TV"
                android:text="20:14"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/header_divider_LL"
            android:layout_below="@id/elem_header"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/custom_gray"/>
        <LinearLayout
            android:layout_below="@id/header_divider_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/review_content_TV"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="lerom ipsum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>