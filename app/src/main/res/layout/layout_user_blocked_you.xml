<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/additional_main_container"
        android:orientation="vertical"
        android:background="@drawable/background_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/header_LL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/user_avatar_n_actions_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/user_avatar_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.percent.PercentRelativeLayout
                                android:id="@+id/percentageView"
                                android:layout_width="match_parent"
                                android:paddingTop="50dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="50dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/LU_avatar_IV"
                                    app:layout_widthPercent="100%"
                                    app:layout_aspectRatio="100%"
                                    android:src="@drawable/background_game"/>

                                <LinearLayout
                                    android:id="@+id/hide_user_avatar_LL"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:gravity="top|center_horizontal"
                                    app:layout_widthPercent="100%"
                                    app:layout_aspectRatio="100%"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true">
                                    <TextView
                                        android:layout_marginTop="30dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#fff"
                                        android:textStyle="bold"
                                        android:textSize="16dp"
                                        android:text="@string/hide_user_avatar_user_profile"/>
                                    <ImageView
                                        android:layout_marginTop="10dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/img_call_phone"/>
                                </LinearLayout>
                            </android.support.percent.PercentRelativeLayout>
                            <LinearLayout
                                android:id="@+id/user_additional_actions_LL"
                                android:orientation="horizontal"
                                android:layout_alignBottom="@id/percentageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/like_container"
                                    android:gravity="center|bottom"
                                    android:layout_weight="30">
                                    <ImageView
                                        android:id="@+id/like_IV"
                                        android:background="#fff"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/rating_container"
                                    android:gravity="center|bottom"
                                    android:layout_weight="40">
                                    <ImageView
                                        android:id="@+id/LU_stars_IV"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icon_user_stars_five"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:cropToPadding="true" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/cancel_container"
                                    android:gravity="center|bottom"
                                    android:layout_weight="30">
                                    <ImageView
                                        android:id="@+id/cancel_IV"
                                        android:background="#fff"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/username_n_age_TV"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Алина, 22"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="28dp" />
                        <RelativeLayout
                            android:id="@+id/more_main_container"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/block_reason_TV"
                                android:gravity="center"
                                android:layout_alignParentTop="true"
                                android:paddingBottom="40dp"
                                android:textSize="16dp"
                                android:text="@string/you_blocked"
                                android:layout_above="@id/btn_continion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <Button
                                android:id="@+id/btn_continion"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/btn_continion"
                                android:text="@string/continues"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>