<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_auth"
    tools:context="com.zoomapps.eromance.Activities.LanguageChooseActivity">
   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_Logo"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logoerom" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_height="70dp">
                        <RadioButton
                            android:id="@+id/russian_lang_RB"
                            android:background="@drawable/language_rad_btn"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:text="Русский\nязык"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="100dp"
                        android:layout_height="63dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/russian_flag"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_height="70dp">
                        <RadioButton
                            android:id="@+id/english_lang_RB"
                            android:background="@drawable/language_rad_btn"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:text="English\nlanguage"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="100dp"
                        android:layout_height="63dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/england_flag"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_height="70dp">
                        <RadioButton
                            android:id="@+id/kazakh_lang_RB"
                            android:background="@drawable/language_rad_btn"
                            android:button="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:text="Казак\nтили"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="100dp"
                        android:layout_height="63dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/kazakh_flag"/>
                </RelativeLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_component_background"
                android:text="@string/confirm"
                android:textSize="16sp" />
        </LinearLayout>
        </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</LinearLayout>
