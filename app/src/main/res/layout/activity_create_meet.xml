<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_meet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoomapps.eromance.Activities.CreateMeetActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/NoActionBarTheme.AppBarOverlay">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/NoActionBarTheme.PopupOverlay"
            android:id="@+id/frameLayout">
            <include layout="@layout/custom_toolbar"
                android:id="@+id/include_toolbar"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/create"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!--TODO: Починить кнопку-->
        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_continion"
            android:text="Создать"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_marginBottom="70dp"
        android:layout_alignParentStart="true">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@string/meeting_goal"
                        android:textAlignment="viewStart"
                        android:textColor="@color/golden" />
                </LinearLayout>
            <android.support.v7.widget.RecyclerView
            android:id="@+id/search_params_RV"
                android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/additionally"
                android:textAlignment="viewStart"
                android:textColor="@color/golden" />
            <RadioGroup
                android:id="@+id/item_payment_type_RG"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/fifty_RB"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50/50"
                    android:buttonTint="@color/golden"
                    android:textColor="#000"/>
                <RadioButton
                    android:id="@+id/forMe_RB"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expense"
                    android:buttonTint="@color/golden"
                    android:textColor="#000"/>
                <RadioButton
                    android:id="@+id/forYou_RB"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/you_expense"
                    android:buttonTint="@color/golden"
                    android:textColor="#000"/>
            </RadioGroup>
            <CheckBox
                android:id="@+id/not_alone_CB"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_one"
                android:buttonTint="@color/golden"
                android:textColor="#000"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/selectedUser_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Отмечен: "
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/duration"
                android:textAlignment="viewStart"
                android:textColor="@color/golden" />
                 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/Ll_date_meseting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/textView45"
                                    android:layout_width="27dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_date_meeting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Дата встречи"
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/golden"
                                    android:textSize="17sp" />
                                <TextView
                                    android:id="@+id/tv_time_meeting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Время встречи"
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/golden"
                                    android:textSize="17sp" />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/date_range_container"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/dateFrom_LL"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="27dp"
                                            android:layout_height="wrap_content"
                                            android:text="от:"
                                            android:textColor="@color/golden" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="6dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:id="@+id/tv_currentDateFrom"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:textAlignment="center"
                                                android:textColor="@color/colorPrimary" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:id="@+id/tv_currentTimeFrom"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:text="0"
                                                android:textAlignment="center"
                                                android:textColor="@color/colorPrimary" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/dateTo_LL"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textView64"
                                        android:layout_width="27dp"
                                        android:layout_height="wrap_content"
                                        android:text="до:"
                                        android:textColor="@color/golden" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="6dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/tv_currentDateBefore"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorPrimary" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_currentTimeBefore"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="3dp"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorPrimary" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/duration_container"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioGroup
                                android:id="@+id/duration_RG"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:gravity="center"
                                    android:id="@+id/one_hour_RB"
                                    android:text="@string/hour"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:buttonTint="@color/golden"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:textColor="#000"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:gravity="center"
                                    android:id="@+id/two_hour_RB"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="#000"
                                    android:buttonTint="@color/golden"
                                    android:text="@string/hours"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>
